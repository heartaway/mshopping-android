<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/news_item_bg"
    android:orientation="vertical" >

    <com.taobao.tae.Mshopping.demo.widget.ScaleImageView
        android:id="@+id/item_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@null" />

    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:textColor="#656565" />

    <TextView
            android:id="@+id/item_line"
            android:layout_height="1px"
            android:background="#bbbbbb"
            android:textSize="10sp"
            android:layout_below="@+id/item_title"
            android:layout_marginLeft="6dip"
            android:layout_marginRight="6dip"
            android:layout_marginTop="6dip"
            android:layout_marginBottom="6dip"
            android:layout_width="fill_parent">
    </TextView>

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="30dip"
            android:layout_below="@id/item_line"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:layout_marginTop="-7dip"
            android:id="@+id/xx"
            >

        <ImageView
                android:id="@+id/item_tag_img"
                android:layout_width="14dip"
                android:layout_height="14dip"
                android:layout_centerVertical="true"
                android:background="@drawable/tabbar_icon_home_d"
                />
        <TextView
                android:id="@+id/item_price"
                android:layout_toRightOf="@id/item_tag_img"
                android:layout_marginLeft="5dip"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/lightRed"
                android:textSize="14sp"/>

        <TextView
                android:id="@+id/item_love"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="201"
                android:textColor="@color/lightRed"
                android:textSize="14dip"
                />
        <ImageView
                android:id="@+id/item_fav_img"
                android:layout_width="16dip"
                android:layout_height="16dip"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/item_love"
                android:background="@drawable/item_image_unfav"
                />
    </RelativeLayout>
</LinearLayout>